<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post title"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post body that can get pretty long and maybe even fill the screen Post body that can get pretty long and maybe even fill the screen Post body that can get pretty long and maybe even fill the screen Post body that can get pretty long and maybe even fill the screen Post body that can get pretty long and maybe even fill the screen"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <TextView
            android:id="@+id/tv_album_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_double"
            android:text="Related albums"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_body" />

        <TextView
            android:id="@+id/tv_album_first_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_double"
            android:text="First album"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_album_label" />

        <FrameLayout
            android:id="@+id/fl_1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="@dimen/default_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_album_first_title">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="@dimen/default_margin"
                android:text="Photo title 1"
                android:textColor="@android:color/white" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="@dimen/default_margin"
            app:layout_constraintStart_toEndOf="@+id/fl_1"
            app:layout_constraintTop_toBottomOf="@+id/tv_album_first_title">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="@dimen/default_margin"
                android:text="Photo title 2"
                android:textColor="@android:color/white" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="@dimen/default_margin"
            app:layout_constraintStart_toEndOf="@+id/fl_2"
            app:layout_constraintTop_toBottomOf="@+id/tv_album_first_title">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="@dimen/default_margin"
                android:text="Photo title 2"
                android:textColor="@android:color/white" />
        </FrameLayout>


        <FrameLayout
            android:id="@+id/fl_4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="@dimen/default_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fl_1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="@dimen/default_margin"
                android:text="Photo title 4"
                android:textColor="@android:color/white" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_5"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="@dimen/default_margin"
            app:layout_constraintStart_toEndOf="@+id/fl_4"
            app:layout_constraintTop_toBottomOf="@+id/fl_1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="@dimen/default_margin"
                android:text="Photo title 5"
                android:textColor="@android:color/white" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_6"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="@dimen/default_margin"
            app:layout_constraintStart_toEndOf="@+id/fl_5"
            app:layout_constraintTop_toBottomOf="@+id/fl_1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="@dimen/default_margin"
                android:text="Photo title 6"
                android:textColor="@android:color/white" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>